<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

<log4net>
  <root>
    <level value="DEBUG" />
    <appender-ref ref="RollingFileAppender" />
    <!--<appender-ref ref="FileAppender" />-->
    <appender-ref ref="ColoredConsoleAppender" />-->
  </root>
  
  <renderer renderingClass="UBCopy.ExceptionRenderer, UBCopy" renderedClass="System.Exception" />

  <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="FATAL" />
      <forecolor value="Red" />
      <backcolor value="White" />
    </mapping>

    <mapping>
      <level value="ERROR" />
      <forecolor value="Red, HighIntensity" />
    </mapping>

    <mapping>
      <level value="WARN" />
      <forecolor value="Yellow, HighIntensity" />
    </mapping>

    <mapping>
      <level value="INFO" />
      <forecolor value="Cyan, HighIntensity" />
    </mapping>

    <mapping>
      <level value="DEBUG" />
      <forecolor value="Green, HighIntensity" />
    </mapping>

    <layout type="log4net.Layout.PatternLayout">
      <conversionpattern value="[%thread] - %message%newline" />
    </layout>
  </appender>

  <appender name="FileAppender" type="log4net.Appender.FileAppender">
    <file value="UBCopy.log" />
    <appendToFile value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>

  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="UBCopy.log" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="5" />
    <maximumFileSize value="10MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MMM-dd HH:mm:ss.fff} [%thread] %-5level - %message%newline" />
    </layout>
  </appender>

</log4net>

</configuration>